<?xml version="1.0" encoding="utf-8"?><!--登录界面-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dti_bg"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        tools:context=".activity.LoginActivity">

        <!--    无用空间，用于填充适配-->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="240"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="24"
                tools:ignore="NestedWeights" />

            <!--    账号登录-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="129"
                android:gravity="center|bottom"
                android:text="@string/Login"
                android:textColor="#ffffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--        无用空间 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="64" />

            <!--        登录信息录入-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="108"
                android:orientation="vertical">
                <!--            1.用户名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="36"
                    android:background="@drawable/login_dialog_box"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:background="@mipmap/login_user" />

                    <EditText
                        android:id="@+id/user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:inputType="none"
                        android:textColor="#ff858585"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/user_tips"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:gravity="center|bottom"
                    android:textColor="#ffff5a5a"
                    android:textSize="12sp" />
                <!--            无用空间-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14" />

                <!--            2.密码框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="36"
                    android:background="@drawable/login_dialog_box"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:background="@mipmap/login_password" />

                    <EditText
                        android:id="@+id/password_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#ff858585"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/password_toggle_tips"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="23"
                    android:gravity="center|bottom"
                    android:textColor="#ffff5a5a"
                    android:textSize="12sp" />

            </LinearLayout>

            <!--        提示语-->
            <TextView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="93"
                android:gravity="bottom"
                android:textColor="#ff2f8ece"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="82" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="36"
                android:background="@drawable/login_bt"
                android:onClick="onClick"
                android:text="登录账户"
                android:textColor="#ff0099ff"
                android:textSize="14sp" />


            <!--        无用空间-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80" />


        </LinearLayout>

        <!--    无用空间，用于填充适配-->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />


    </LinearLayout>
</layout>